@import "tools-matchDate-template/tools-matchDate-template.wxss";
@import "../../load-template/load-template.wxss";

.match-top {
  width: 100%;
  height: 76rpx;
  font-size: 28rpx;
  color: #8a8a8a;
  text-align: center;
}

.scrollview {
 
  top: 5%;
}

.title {
  background: #fff;
  margin: 5rpx;
  font-size: 19px;
}

.follow {
  position: fixed;
  -webkit-overflow-scroll:touch;
}

.follows {
  border: 1px solid #cfcecf;
}

.fol-img {
  width: 80rpx;
  height: 80rpx;
}

.tip {
  padding-top: 9px;
}

.middle-ribbon {
  /* border: 1px solid;  */
  width: 750rpx;
  height: 35rpx;
  background: #eee;
}

.vs1 {
  color: #888;
  font-size: 65rpx;
  margin-left: 20rpx;
}

.maohao {
  font-size: 55rpx;
  padding-right: 10rpx;
}

/* 切换栏 */

.switchBar {
   display: flex;
  flex-direction: row; 
  line-height: 60rpx;
  border-bottom: 2rpx solid #ccc;
   justify-content:space-around; 
  
}

.tab-item {
  float: left;
  margin: 0 63rpx;
  /* width: 25%;   */
  text-align: center;
  font-size: 15px;
  color: #777;
}

/*火神杯的切换栏  */

.baskettab-item {
  width: 50%;
  text-align: center;
  font-size: 15px;
  color: #777;
}

.on {
  color: #369;
  border-bottom: 5rpx solid #369;
}

/*积分  */

.matchIntegralview {
  display: flex;
  flex-direction: column;
}

.jin {
  width: 35rpx;
  height: 35rpx;
  padding-left: 15rpx;
  padding-right: 18rpx;
  margin-top: 10rpx;
}

.red {
  color: red;
}

.yellow {
  color: #777;
}

.matchIntegral {
  display: flex;
  flex-direction: row;
  border-bottom: thin solid #ccc;
  line-height: 40rpx;
  padding: 7rpx 32rpx;
  background: #f8f8f8;
  color: #777;
  font-size: 13px;
}

.logo-image-small {
  width: 35rpx;
  height: 32rpx;
}

.matchIntegralteam {
  display: flex;
  flex-direction: row;
  align-items: left;
  border-bottom: thin solid #ccc;
  height: 60rpx;
  padding: 7rpx 0;
  margin: 0 32rpx;
}

.matchIntegralitem {
  text-align: center;
}

.matchIntegralteamitem {
  text-align: center;
  font-size: 15px;
  margin-top: 10rpx;
}

.thismatchIntegralteamitem {
  font-size: 15px;
}

.num-weight {
  font-weight: bold;
}

/*射手  */

.matchshooterview {
  display: flex;
  flex-direction: column;
}

.matchshooter {
  display: flex;
  flex-direction: row;
  font-size: 13px;
  color: #777;
  border-bottom: thin solid #ccc;
  line-height: 40rpx;
  padding: 7rpx 32rpx;
  background: #f8f8f8;
}

.matchshooterteam {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: thin solid #ccc;
  height: 60rpx;
  padding: 7rpx 0;
  font-size: 15px;
}

.matchshooteritem {
  text-align: center;
}

.matchshooterteamitem {
  text-align: center;
}

/*红黄牌  */

.matchyellowcardview {
  display: flex;
  flex-direction: column;
}

.matchyellowcard {
  display: flex;
  flex-direction: row;
  border-bottom: thin solid #ccc;
  line-height: 40rpx;
  padding: 7rpx 32rpx;
  background: #f8f8f8;
  font-size: 13px;
  color: #777;
  text-align: left;
}

.matchyellowcardteam {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: thin solid #ccc;
  height: 60rpx;
  padding: 7rpx 0;
  font-size: 15px;
}

.matchyellowcarditem {
  text-align: center;
}

.matchyellowcardteamitem {
  text-align: center;
}

/* 小组赛 */

.a-grade {
  font-size: 15px;
  color: white;
  background-color: #fb6b02;
  width: 80rpx;
  height: 50rpx;
  padding-left: 20rpx;
  line-height: 50rpx;
  vertical-align: middle;
  margin: 10rpx 0 10rpx 20rpx;
}

.border-top {
  border-top: thin solid #ccc;
}
